<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="adminCategory">

<!-- 카테고리추가 -->
<insert id="categoryInsert" parameterType="hashmap" useGeneratedKeys="true" keyProperty="CATEGORY_NUM">
	<selectKey keyProperty="CATEGORY_NUM" resultType="string" order="BEFORE">
			SELECT CATEGORY_NUM_SEQ.NEXTVAL FROM DUAL
	</selectKey>
	<![CDATA[
		INSERT 
		INTO CATEGORY( 
			 CATEGORY_NUM,
			 BIG_CATEGORY,
			 SMALL_CATEGORY,
			 CATEGORY_IMG
		)VALUES(
			#{CATEGORY_NUM},
			#{BIG_CATEGORY},
			#{SMALL_CATEGORY},
			#{CATEGORY_IMG}
		)
	]]>
</insert>

<!-- 카테고리 삭제 -->
<delete id="categoryDelete" parameterType="hashmap">
<![CDATA[
	DELETE 
	FROM 
		CATEGORY
	WHERE 
		CATEGORY_NUM=#{CATEGORY_NUM} 
]]>
</delete>

<!-- 카테고리 목록보기 -->
<select id="categorySelect" parameterType="hashmap" resultType="hashmap">
<![CDATA[
	SELECT
	  *
	FROM 
		CATEGORY
	
]]>
</select>

</mapper>